<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units">

    <!-- ModernScrollViewer 커스텀 컨트롤 스타일 -->
    <Style TargetType="units:ModernScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:ModernScrollViewer">
                    <Border 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0"/>
                            </Grid.RowDefinitions>

                            <!-- 메인 콘텐츠 영역 -->
                            <ScrollContentPresenter 
                                x:Name="PART_ContentPresenter"
                                Grid.Row="0" 
                                Grid.Column="0"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Margin="{TemplateBinding Padding}"/>

                            <!-- 수직 스크롤바 -->
                            <ScrollBar 
                                x:Name="PART_VerticalScrollBar"
                                Grid.Row="0" 
                                Grid.Column="1"
                                Orientation="Vertical"
                                Width="14"
                                Margin="1,0,0,0"
                                Minimum="0"
                                Maximum="{TemplateBinding ScrollableHeight}"
                                Value="{TemplateBinding VerticalOffset}"
                                ViewportSize="{TemplateBinding ViewportHeight}"
                                Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                Style="{StaticResource ModernVerticalScrollBarStyle}"/>

                            <!-- 수평 스크롤바 -->
                            <ScrollBar 
                                x:Name="PART_HorizontalScrollBar"
                                Grid.Row="1" 
                                Grid.Column="0"
                                Orientation="Horizontal"
                                Height="14"
                                Margin="0,1,0,0"
                                Minimum="0"
                                Maximum="{TemplateBinding ScrollableWidth}"
                                Value="{TemplateBinding HorizontalOffset}"
                                ViewportSize="{TemplateBinding ViewportWidth}"
                                Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                Style="{StaticResource ModernHorizontalScrollBarStyle}"/>

                            <!-- 코너 사각형 -->
                            <Rectangle 
                                Grid.Row="1" 
                                Grid.Column="1"
                                Fill="#F5F5F5"
                                Width="14"
                                Height="14"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 모던 수직 스크롤바 스타일 -->
    <Style x:Key="ModernVerticalScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="#F8F8F8"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 위쪽 버튼 -->
                        <RepeatButton 
                            x:Name="PART_LineUpButton"
                            Grid.Row="0"
                            Width="14"
                            Height="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Visibility="Collapsed"/>

                        <!-- 스크롤 트랙 영역 -->
                        <Grid x:Name="PART_Track" Grid.Row="1" Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 위쪽 페이지 버튼 -->
                            <RepeatButton 
                                x:Name="PART_PageUpButton"
                                Grid.Row="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"/>

                            <!-- 스크롤 썸 -->
                            <Border 
                                x:Name="PART_Thumb"
                                Grid.Row="1"
                                Background="#CCCCCC"
                                CornerRadius="7"
                                Margin="2,0,2,0"
                                MinHeight="20"
                                Width="10"/>

                            <!-- 아래쪽 페이지 버튼 -->
                            <RepeatButton 
                                x:Name="PART_PageDownButton"
                                Grid.Row="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"/>
                        </Grid>

                        <!-- 아래쪽 버튼 -->
                        <RepeatButton 
                            x:Name="PART_LineDownButton"
                            Grid.Row="2"
                            Width="14"
                            Height="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Visibility="Collapsed"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 모던 수평 스크롤바 스타일 -->
    <Style x:Key="ModernHorizontalScrollBarStyle" TargetType="ScrollBar">
        <Setter Property="Background" Value="#F8F8F8"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 왼쪽 버튼 -->
                        <RepeatButton 
                            x:Name="PART_LineLeftButton"
                            Grid.Column="0"
                            Width="0"
                            Height="14"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Visibility="Collapsed"/>

                        <!-- 스크롤 트랙 영역 -->
                        <Grid x:Name="PART_Track" Grid.Column="1" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 왼쪽 페이지 버튼 -->
                            <RepeatButton 
                                x:Name="PART_PageLeftButton"
                                Grid.Column="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"/>

                            <!-- 스크롤 썸 -->
                            <Border 
                                x:Name="PART_Thumb"
                                Grid.Column="1"
                                Background="#CCCCCC"
                                CornerRadius="7"
                                Margin="0,2,0,2"
                                MinWidth="20"
                                Height="10"/>

                            <!-- 오른쪽 페이지 버튼 -->
                            <RepeatButton 
                                x:Name="PART_PageRightButton"
                                Grid.Column="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"/>
                        </Grid>

                        <!-- 오른쪽 버튼 -->
                        <RepeatButton 
                            x:Name="PART_LineRightButton"
                            Grid.Column="2"
                            Width="0"
                            Height="14"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Visibility="Collapsed"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RepeatButton 기본 스타일 -->
    <Style x:Key="ScrollBarRepeatButtonStyle" TargetType="RepeatButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>