<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rspns="clr-namespace:Jamesnet.Platform.OpenSilver.Responsive;assembly=Jamesnet.Platform.OpenSilver"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units">

    <Style TargetType="units:ShowcaseHeadline">
        <Setter Property="Title" Value="{Binding Title}"/>
        <Setter Property="Description" Value="{Binding Description}"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:ShowcaseHeadline">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid rspns:ResponsiveVisibility.Desktop="Visible"
                              rspns:ResponsiveVisibility.Mobile="Collapsed"
                              rspns:ResponsiveVisibility.Breakpoint="800">
                            <Border Background="#F12A68A1" 
                                    Margin="0" 
                                    BorderThickness="1"
                                    BorderBrush="#FF103F85"
                                    CornerRadius="8">
                                <StackPanel Margin="20 10">
                                    <StackPanel Orientation="Horizontal" 
                                                Margin="0 0 0 0">
                                        <Image Source="/OpenSilverShowcase.Support;component/Local/Images/opensilver.png"
                                               Width="30" 
                                               Height="30" 
                                               Stretch="Uniform" 
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="{TemplateBinding Title}" 
                                                   FontSize="22" 
                                                   FontWeight="Medium"
                                                   Foreground="White" 
                                                   Margin="10 0 10 0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{TemplateBinding Description}"
                                               MaxHeight="36"
                                               TextTrimming="CharacterEllipsis"
                                               FontSize="12" 
                                               Foreground="#FFD6E1EC" 
                                               TextWrapping="Wrap"
                                               Margin="40 0 0 5"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        

                        <ContentControl Grid.Row="1"
                                        Content="{Binding ShowcaseList}"
                                        Margin="0 4 0 0"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
