<units:ShowcaseItem
    x:Class="OpenSilverShowcase.Popups.Examples.PopupItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    Description="fundamentals of button styling with colors, fonts, and images."
    Title="Basic"
    Order="1">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/PopupItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/PopupItem.xaml.cs"/>
    </units:ShowcaseItem.CodeSources>
    <units:ShowcaseItem.DemoContent>
        <Grid xmlns:cnvts="clr-namespace:OpenSilverShowcase.Popups.Converters"
              Background="#FFF8F9FA">
            <Grid.Resources>
                <cnvts:EnumToListConverter x:Key="EnumToListConverter"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF3393FF" Offset="0"/>
                        <GradientStop Color="#FF6BB6FF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <ContentControl Content="Popup"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Padding="15,10"/>
            </Border>

            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="8"
                    Margin="10">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="20">

                    <Button Name="openPopupButton"
                            Click="OpenPopupButton_Click"
                            Content="Open popup"
                            Background="#FF3393FF"
                            Foreground="White"
                            Padding="15,8"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Border Margin="0,20,0,0"
                            Background="#FFF5F7FA"
                            CornerRadius="8"
                            Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Text="Placement "
                                       Foreground="#FF2D3748"
                                       FontWeight="Medium"/>
                            <ComboBox Grid.Column="1"
                                      Height="24"
                                      FontSize="12"
                                      Background="White"
                                      BorderBrush="#FFCBD5E0"
                                      ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Static Popup.PlacementProperty}}"
                                      SelectedItem="{Binding ElementName=MyPopup, Path=Placement, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="1"
                                       VerticalAlignment="Center"
                                       Text="HorizontalOffset "
                                       Foreground="#FF2D3748"
                                       FontWeight="Medium"/>
                            <NumericUpDown Grid.Row="1"
                                           Grid.Column="1"
                                           Height="24"
                                           MinWidth="0"
                                           Margin="0,10"
                                           FontSize="12"
                                           Background="White"
                                           BorderBrush="#FFCBD5E0"
                                           Maximum="3000"
                                           Minimum="-100"
                                           Value="{Binding ElementName=MyPopup, Path=HorizontalOffset, Mode=TwoWay}"/>

                            <TextBlock Grid.Row="2"
                                       VerticalAlignment="Center"
                                       Text="VerticalOffset "
                                       Foreground="#FF2D3748"
                                       FontWeight="Medium"/>
                            <NumericUpDown Grid.Row="2"
                                           Grid.Column="1"
                                           Height="24"
                                           MinWidth="0"
                                           FontSize="12"
                                           Background="White"
                                           BorderBrush="#FFCBD5E0"
                                           Maximum="3000"
                                           Minimum="-1000"
                                           Value="{Binding ElementName=MyPopup, Path=VerticalOffset, Mode=TwoWay}"/>

                            <CheckBox Grid.Row="3"
                                      Grid.ColumnSpan="2"
                                      Margin="0,10,0,0"
                                      Content="StaysWithinScreenBounds"
                                      FontSize="11"
                                      Foreground="#FF4A5568"
                                      IsChecked="{Binding StaysWithinScreenBounds, ElementName=MyPopup, Mode=TwoWay}"/>
                        </Grid>
                    </Border>

                    <Popup x:Name="MyPopup" PlacementTarget="{Binding ElementName=openPopupButton}">
                        <Border Background="White"
                                BorderBrush="#FF3393FF"
                                BorderThickness="2"
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect Color="#40000000" 
                                                BlurRadius="10" 
                                                ShadowDepth="4" 
                                                Direction="315"/>
                            </Border.Effect>
                            <StackPanel>
                                <Border Background="#FF3393FF"
                                        CornerRadius="8,8,0,0"
                                        Padding="20,15">
                                    <TextBlock Text="This is a popup!"
                                              Foreground="White"
                                              FontWeight="Bold"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                </Border>

                                <StackPanel Background="White" 
                                           Margin="20,15">
                                    <Button Grid.Row="1"
                                            Margin="0"
                                            Padding="12,8"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="PopupButtonClose_Click"
                                            Content="Close"
                                            Background="#FFDC3545"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="Medium"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="5"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Popup>
                </StackPanel>
            </Border>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>