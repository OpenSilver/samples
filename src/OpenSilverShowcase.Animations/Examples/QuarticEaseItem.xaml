<units:ShowcaseItem
    x:Class="OpenSilverShowcase.Animations.Examples.QuarticEaseItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    Description="fundamentals of button styling with colors, fonts, and images."
    Title="Basic Style"
    Order="1">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/QuarticEaseItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/QuarticEaseItem.xaml.cs"/>
    </units:ShowcaseItem.CodeSources>
    <units:ShowcaseItem.DemoContent>
        <Grid Background="#FFF8FAFC">
            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="40" 
                    Margin="20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Header -->
                    <TextBlock Text="Slide Animation" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#FF1F2937" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Click to see smooth sliding with QuarticEase" 
                               FontSize="14" 
                               Foreground="#FF6B7280" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"/>

                    <!-- Animation Demo Area -->
                    <Canvas Width="280" Height="120" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="0,0,0,25">
                        <Border Background="#FFF9FAFB" 
                                BorderBrush="#FFE5E7EB" 
                                BorderThickness="2" 
                                CornerRadius="12"
                                Width="280" Height="120"/>

                        <Border x:Name="AnimatedElement"
                                Canvas.Left="20" Canvas.Top="30"
                                Width="60" Height="60"
                                Background="#FFF59E0B"
                                CornerRadius="12">
                            <Border.RenderTransform>
                                <CompositeTransform x:Name="ElementTransform"/>
                            </Border.RenderTransform>
                            <TextBlock Text="SLIDE" 
                                       FontSize="12" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Canvas>

                    <!-- Control Button -->
                    <Button Content="Slide" 
                            Background="#FFF59E0B" 
                            Foreground="White" 
                            BorderThickness="0" 
                            Padding="20,12"
                            FontSize="14"
                            FontWeight="Medium"
                            Cursor="Hand"
                            Click="OnAnimateClick"/>
                </StackPanel>
            </Border>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>
