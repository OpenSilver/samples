<units:ShowcaseItem
    x:Class="OpenSilverShowcase.Datas.Examples.DataPagerItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    Description="fundamentals of button styling with colors, fonts, and images."
    Title="DataPager"
    Order="2">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/DataPagerItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/DataPagerItem.xaml.cs"/>
        <units:CodeSource Key="Converter" Source="/Converters/EnumToListConverter.cs"/>
        <units:CodeSource Key="model" Source="/Models/AtomicElement.cs"/>
    </units:ShowcaseItem.CodeSources>
    <units:ShowcaseItem.DemoContent>
        <Grid xmlns:cnvts="clr-namespace:OpenSilverShowcase.Datas.Converters">
            <Grid.Resources>
                <cnvts:EnumToListConverter x:Key="EnumToListConverter"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <DataGrid x:Name="DataGrid1" 
                          Grid.Row="1"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name" Width="3*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" 
                                                   Grid.Column="1" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="#d36e03" 
                                                   Margin="3,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding Symbol}" 
                                            Header="Symbol" 
                                            Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <DataPager x:Name="dataPager" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Stretch"
                           DisplayMode="FirstLastPreviousNextNumeric"
                           NumericButtonCount="3"
                           PageSize="10"
                           Source="{Binding Path=ItemsSource, 
                           ElementName=DataGrid1}"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Text="DataPager DisplayMode" Margin="0 5 0 5"/>
                <ComboBox ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, 
                          ConverterParameter={x:Type PagerDisplayMode}}"
                          SelectedItem="{Binding Path=DisplayMode, 
                          ElementName=dataPager, 
                          Mode=TwoWay}"
                          Padding="10 4 10 4"
                          FontSize="12"/>
            </StackPanel>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>
