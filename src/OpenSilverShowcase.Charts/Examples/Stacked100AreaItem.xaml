<units:ShowcaseItem
    x:Class="OpenSilverShowcase.Charts.Examples.Stacked100AreaItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    xmlns:local="clr-namespace:OpenSilverShowcase.Charts.Examples"
    Description="Demonstrates 100% stacked area charts for showing proportional relationships over time."
    HorizontalContentAlignment="Stretch"
    Title="Stacked100Area"
    Order="8">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/Stacked100AreaItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/Stacked100AreaItem.xaml.cs"/>
    </units:ShowcaseItem.CodeSources>
    <units:ShowcaseItem.DemoContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Background="#FFD2BD9C"
                            Content="Stacked100AreaSeries"
                            Foreground="#FFDEA542"/>

            <Chart Grid.Row="1">
                <Chart.Axes>
                    <CategoryAxis Title="Period" Orientation="X"/>
                    <CategoryAxis Title="Sales" Orientation="Y"/>
                </Chart.Axes>
                <Chart.Series>
                    <Stacked100AreaSeries x:Name="MySeries">
                        <Stacked100AreaSeries.SeriesDefinitions>
                            <SeriesDefinition x:Name="ChairsSeries"
                                              Title="Chairs"
                                              DependentValuePath="Sales"
                                              IndependentValuePath="Month"/>
                            <SeriesDefinition x:Name="TablesSeries"
                                              Title="Tables"
                                              DependentValuePath="Sales"
                                              IndependentValuePath="Month"/>
                        </Stacked100AreaSeries.SeriesDefinitions>
                    </Stacked100AreaSeries>

                </Chart.Series>
            </Chart>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>