<units:ShowcaseItem
    x:Class="OpenSilverShowcase.Charts.Examples.ScatterSeriesItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    xmlns:local="clr-namespace:OpenSilverShowcase.Charts.Examples"
    Description="Demonstrates scatter series charts for showing relationships between data points."
    HorizontalContentAlignment="Stretch"
    Title="ScatterSeries"
    Order="7">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/ScatterSeriesItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/ScatterSeriesItem.xaml.cs"/>
    </units:ShowcaseItem.CodeSources>
    <units:ShowcaseItem.DemoContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Background="#FFD2BD9C"
                            Content="ScatterSeries"
                            Foreground="#FFDEA542"/>
            <Chart Grid.Row="1" Margin="20">
                <Chart.Axes>
                    <CategoryAxis Title="Period" Orientation="X"/>
                    <LinearAxis Title="Sales" 
                               Orientation="Y"
                               Minimum="0"
                               Maximum="220"
                               Interval="50"
                               ShowGridLines="True"/>
                </Chart.Axes>
                <Chart.Series>
                    <ScatterSeries x:Name="ChairsSeries"
                                   Title="Chairs"
                                   DependentValuePath="Sales"
                                   IndependentValuePath="Month">
                        <ScatterSeries.DataPointStyle>
                            <Style TargetType="ScatterDataPoint">
                                <Setter Property="Background" Value="#FF00C853"/>
                                <Setter Property="BorderBrush" Value="#FF00A043"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Width" Value="12"/>
                                <Setter Property="Height" Value="12"/>
                            </Style>
                        </ScatterSeries.DataPointStyle>
                    </ScatterSeries>
                    <ScatterSeries x:Name="TablesSeries"
                                   Title="Tables"
                                   DependentValuePath="Sales"
                                   IndependentValuePath="Month">
                        <ScatterSeries.DataPointStyle>
                            <Style TargetType="ScatterDataPoint">
                                <Setter Property="Background" Value="#FF7C4DFF"/>
                                <Setter Property="BorderBrush" Value="#FF5E35B1"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Width" Value="12"/>
                                <Setter Property="Height" Value="12"/>
                            </Style>
                        </ScatterSeries.DataPointStyle>
                    </ScatterSeries>
                </Chart.Series>
            </Chart>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>