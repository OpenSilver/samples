<Page x:Class="OpenSilverSample.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:button="clr-namespace:OpenSilverShowcase.Buttons;assembly=OpenSilverShowcase.Buttons"
      xmlns:toggle="clr-namespace:OpenSilverShowcase.ToggleButtons;assembly=OpenSilverShowcase.ToggleButtons"
      xmlns:slider="clr-namespace:OpenSilverShowcase.Sliders;assembly=OpenSilverShowcase.Sliders"
      xmlns:check="clr-namespace:OpenSilverShowcase.CheckBoxs;assembly=OpenSilverShowcase.CheckBoxs"
      xmlns:radio="clr-namespace:OpenSilverShowcase.RadioButtons;assembly=OpenSilverShowcase.RadioButtons"
      xmlns:combo="clr-namespace:OpenSilverShowcase.ComboBoxs;assembly=OpenSilverShowcase.ComboBoxs"
      xmlns:list="clr-namespace:OpenSilverShowcase.ListBoxs;assembly=OpenSilverShowcase.ListBoxs"
      xmlns:pgbar="clr-namespace:OpenSilverShowcase.ProgressBars;assembly=OpenSilverShowcase.ProgressBars"
      xmlns:txtbox="clr-namespace:OpenSilverShowcase.TextBoxs;assembly=OpenSilverShowcase.TextBoxs"
      xmlns:grid="clr-namespace:OpenSilverShowcase.Grids;assembly=OpenSilverShowcase.Grids"
      xmlns:stack="clr-namespace:OpenSilverShowcase.StackPanels;assembly=OpenSilverShowcase.StackPanels"
      xmlns:wrap="clr-namespace:OpenSilverShowcase.WrapPanels;assembly=OpenSilverShowcase.WrapPanels"
      xmlns:border="clr-namespace:OpenSilverShowcase.Borders;assembly=OpenSilverShowcase.Borders"
      xmlns:ckanb="clr-namespace:OpenSilverShowcase.AnimatedNavigationBars;assembly=OpenSilverShowcase.AnimatedNavigationBars"
      xmlns:adpanel="clr-namespace:OpenSilverShowcase.AdaptiveColumnsPanels;assembly=OpenSilverShowcase.AdaptiveColumnsPanels"
      xmlns:stagg="clr-namespace:OpenSilverShowcase.StaggeredPanels;assembly=OpenSilverShowcase.StaggeredPanels"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">
    <ScrollViewer Background="Transparent" VerticalScrollBarVisibility="Visible">
        <StackPanel MaxWidth="800">
            <Grid Background="{DynamicResource Theme_BackgroundBrush}">
                <TabControl>
                    <TabItem Header="Button">
                        <button:ButtonContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="ToggleButton">
                        <toggle:ToggleButtonContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="Slider">
                        <slider:SliderContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="CheckBox">
                        <check:CheckBoxContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="RadioButton">
                        <radio:RadioButtonContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="ComboBox">
                        <combo:ComboBoxContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="ListBox">
                        <list:ListBoxContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="ProgressBar">
                        <pgbar:ProgressBarContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="TextBox">
                        <txtbox:TextBoxContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="Grid">
                        <grid:GridContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="WrapPanel">
                        <wrap:WrapPanelContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="Border">
                        <border:BorderContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="AnimatedNavigationBar">
                        <ckanb:AnimatedNavigationBarContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="AdaptiveColumnsPanel">
                        <adpanel:AdaptiveColumnsPanelContent IsMenuPanelVisible="True"/>
                    </TabItem>
                    <TabItem Header="StaggeredPanel">
                        <stagg:StaggeredPanelContent IsMenuPanelVisible="True"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
