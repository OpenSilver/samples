    <Style x:Key="GitHubText" TargetType="TextBlock">
        <Setter Property="Text" Value="OpenSilver Samples"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="4 0 0 0"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>
    
    <Style x:Key="Footer" TargetType="StackPanel">
        <Setter Property="Grid.Row" Value="2"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Height" Value="20"/>
    </Style>
    
    <Style x:Key="GitHubLink" TargetType="HyperlinkButton">
        <Setter Property="NavigateUri" Value="https://github.com/OpenSilver/Samples"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TargetName" Value="_Blank"/>
    </Style>

</ResourceDictionary>
