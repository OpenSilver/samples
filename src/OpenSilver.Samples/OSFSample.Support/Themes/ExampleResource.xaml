<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="ExampleHeaderBorder" TargetType="Border">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Background" Value="#EEEEEE"/>
        <Setter Property="CornerRadius" Value="6 6 0 0"/>
        <Setter Property="BorderThickness" Value="1 1 1 0"/>
        <Setter Property="BorderBrush" Value="#BBBBBB"/>
    </Style>

    <Style x:Key="ExampleHeaderItemBorder" TargetType="Border">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="CornerRadius" Value="6 0 0 0"/>
        <Setter Property="BorderThickness" Value="1 1 1 0"/>
        <Setter Property="BorderBrush" Value="#BBBBBB"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="ExampleHeaderItemText" TargetType="TextBlock">
        <Setter Property="Text" Value="OpenSilver"/>
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="LineHeight" Value="30"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="ExampleHeaderItemAssemblyName" TargetType="TextBlock">
        <Setter Property="Text" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Tag}"/>
        <Setter Property="Margin" Value="10 0 10 0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="LineHeight" Value="30"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="ExampleContentBorder" TargetType="Border">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="CornerRadius" Value="0 0 6 6"/>
        <Setter Property="BorderThickness" Value="1 1 1 1"/>
        <Setter Property="BorderBrush" Value="#BBBBBB"/>
    </Style>

    <Style x:Key="ExampleContentStackPanel" TargetType="StackPanel">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="10"/>
    </Style>
</ResourceDictionary>
