<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvts="clr-namespace:OSFSample.Support.Local.Converters"
    xmlns:units="clr-namespace:OSFSample.Support.UI.Units">

    <cnvts:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <Style TargetType="units:ShowcaseItem">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="DemoBackground" Value="#F9FAFB"/>
        <Setter Property="DemoBorderBrush" Value="#E5E7EB"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:ShowcaseItem">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}" Padding="24" Margin="0,0,0,32">
                        <StackPanel>

                            <!-- Title -->
                            <TextBlock x:Name="PART_TitleBlock"
                                       Text="{TemplateBinding Title}"
                                       FontSize="30"
                                       FontWeight="SemiBold"
                                       Foreground="#1A1A1A"
                                       Margin="0,0,0,2"/>

                            <!-- Description -->
                            <TextBlock x:Name="PART_DescriptionBlock"
                                       Text="{TemplateBinding Description}"
                                       FontSize="14"
                                       Foreground="#4A4A4A"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                            <!-- Demo Box -->
                            <Border Background="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DemoBackground}"
                                    CornerRadius="12"
                                    BorderBrush="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DemoBorderBrush}"
                                    BorderThickness="1"
                                    Padding="32"
                                    Margin="0,0,0,12">
                                <ContentControl x:Name="PART_DemoHost"
                                                Content="{TemplateBinding DemoContent}"
                                                HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Code Block -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Toolbar -->
                                <Border BorderBrush="#DFDFDF" BorderThickness="1 1 1 0" CornerRadius="8 8 0 0">
                                    <Grid Grid.Row="0" Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <units:CodeTypeListBox
                                            x:Name="PART_CodeTab"
                                            Grid.Column="0"
                                            Height="32"
                                            Margin="0,0,8,0"
                                            SelectedIndex="0"
                                            SelectedItem="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SelectedCodeTab, Mode=TwoWay}"
                                            ItemsSource="{TemplateBinding CodeSources}">
                                            <units:CodeTypeListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Key}" FontSize="12" />
                                                </DataTemplate>
                                            </units:CodeTypeListBox.ItemTemplate>
                                        </units:CodeTypeListBox>

                                        <!-- Icon Buttons -->
                                        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                                            <units:IconButton IconData="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" Margin="0,0,4,0" ToolTip="Copy" />
                                            <units:IconButton IconData="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.87 8.166 6.84 9.49.5.09.66-.217.66-.483 0-.237-.01-1.02-.015-1.85-2.782.603-3.37-1.34-3.37-1.34-.454-1.15-1.11-1.457-1.11-1.457-.91-.62.07-.607.07-.607 1.004.07 1.53 1.03 1.53 1.03.89 1.53 2.34 1.09 2.91.833.09-.65.35-1.09.63-1.34-2.22-.26-4.56-1.11-4.56-4.94 0-1.09.39-1.98 1.03-2.67-.1-.26-.45-1.3.1-2.71 0 0 .84-.27 2.75 1.03A9.563 9.563 0 0112 6.8a9.56 9.56 0 012.5.34c1.91-1.3 2.75-1.03 2.75-1.03.55 1.41.2 2.45.1 2.71.64.69 1.03 1.58 1.03 2.67 0 3.84-2.34 4.68-4.57 4.93.36.31.68.91.68 1.84 0 1.33-.01 2.4-.01 2.73 0 .27.18.58.69.48A10.001 10.001 0 0022 12c0-5.52-4.48-10-10-10z" Margin="0,0,4,0" ToolTip="GitHub" />
                                            <units:IconButton IconData="M21,12L14,5V9C7,10 4,15 3,20C5.5,16.5 9,14.9 14,14.9V19L21,12Z" ToolTip="Share Link" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Code Viewer -->
                                <Border Background="#0D1117"
                                        CornerRadius="0 0 8 8"
                                        MinHeight="250" MaxHeight="250"
                                        Grid.Row="1">
                                    <ScrollViewer Background="Transparent" HorizontalScrollBarVisibility="Auto" Padding="16">
                                        <ItemsControl ItemsSource="{TemplateBinding CodeSources}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock
                                                        FontFamily="Consolas"
                                                        FontSize="13"
                                                        Foreground="#D1D5DA"
                                                        Text="{Binding Code}"
                                                        TextWrapping="Wrap"
                                                        xml:space="preserve"
                                                        Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>