<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OSFSample.Support.UI.Units">

    <!-- IconButton (단순 아이콘 버튼용) -->
    <Style TargetType="units:IconButton">
        <Setter Property="Width" Value="26" />
        <Setter Property="Height" Value="26" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:IconButton">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}">
                        <Path Data="{TemplateBinding IconData}" Width="14" Height="14" Stretch="Uniform" Fill="#374151"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
