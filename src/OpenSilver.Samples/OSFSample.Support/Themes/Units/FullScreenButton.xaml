<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OSFSample.Support.UI.Units">
    
    <Style TargetType="units:FullScreenButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="units:FullScreenButton">
                    <Border Background="#AAD2E9F0"
                            Cursor="Hand"
                            BorderThickness="0 1 0 1" 
                            BorderBrush="#DFDFDF">
                        <StackPanel Orientation="Horizontal">
                            <Path Width="14" Height="14"
                                  Stretch="Uniform"
                                  Fill="#000000"
                                  Data="M5,5H10V7H7V10H5V5M14,5H19V10H17V7H14V5M17,14H19V19H14V17H17V14M10,17V19H5V14H7V17H10Z"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Margin="10"/>
                            <TextBlock Text="Full Screen View (MonacoEditor)"
                                       TextDecorations="Underline"
                                       Foreground="#000000"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
