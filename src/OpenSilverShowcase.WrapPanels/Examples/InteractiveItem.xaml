<units:ShowcaseItem
    x:Class="OpenSilverShowcase.WrapPanels.Examples.InteractiveItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:units="clr-namespace:OpenSilverShowcase.Support.UI.Units;assembly=OpenSilverShowcase.Support"
    Description="fundamentals of button styling with colors, fonts, and images."
    HorizontalContentAlignment="Stretch"
    Title="InteractiveItem"
    Order="1">
    <units:ShowcaseItem.CodeSources>
        <units:CodeSource Key="xaml" Source="/Examples/InteractiveItem.xaml"/>
        <units:CodeSource Key="xaml.cs" Source="/Examples/InteractiveItem.xaml.cs"/>
    </units:ShowcaseItem.CodeSources>
  
    <units:ShowcaseItem.DemoContent>
        
        <Grid xmlns:cnvts="clr-namespace:OpenSilverShowcase.WarpPanels.Converters"
              Grid.Row="1" >
            <Grid.Resources>
                <cnvts:EnumToListConverter x:Key="EnumToListConverter"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

           

            <Border Grid.Row="1" 
               Grid.Column="0"
               Margin="10"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
                <WrapPanel Name="wrapPanel"
                       Width="150"
                       Height="120"
                      >
                    <WrapPanel.Resources>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FF86A666"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="Width" Value="20"/>
                            <Setter Property="Height" Value="20"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </WrapPanel.Resources>

                    <Border>
                        <TextBlock Text="1"/>
                    </Border>
                    <Border Width="30">
                        <TextBlock Text="2"/>
                    </Border>
                    <Border>
                        <TextBlock Text="3"/>
                    </Border>
                    <Border Width="25">
                        <TextBlock Text="4"/>
                    </Border>
                    <Border>
                        <TextBlock Text="5"/>
                    </Border>
                    <Border Width="15">
                        <TextBlock Text="6"/>
                    </Border>
                    <Border Width="30">
                        <TextBlock Text="7"/>
                    </Border>
                </WrapPanel>
            </Border>

            <StackPanel Grid.Row="1" 
                   Grid.Column="1"
                   Margin="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">

                <TextBlock Text="Orientation:" 
                      Margin="0,0,0,5"
                      FontWeight="Bold"/>
                <ComboBox Name="OrientationComboBox"
                     Width="120"
                     Margin="0,0,0,15"
                     HorizontalAlignment="Center"
                     ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Static WrapPanel.OrientationProperty}}"
                     SelectedValue="{Binding Orientation, ElementName=wrapPanel, Mode=TwoWay}"
                     ToolTip="Set WrapPanel orientation"/>

                <TextBlock Text="FlowDirection:" 
                      Margin="0,0,0,5"
                      FontWeight="Bold"/>
                <ComboBox Name="FlowDirectionComboBox"
                     Width="120"
                     HorizontalAlignment="Center"
                     ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Static FrameworkElement.FlowDirectionProperty}}"
                     SelectedValue="{Binding FlowDirection, ElementName=wrapPanel, Mode=TwoWay}"
                     ToolTip="Set content flow direction"/>
            </StackPanel>
        </Grid>
    </units:ShowcaseItem.DemoContent>
</units:ShowcaseItem>
